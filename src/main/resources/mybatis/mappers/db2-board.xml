<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baron.member.sqlModel">

	<!-- Board 관련 쿼리 -->



	<select id="selectBoard" resultType="BoardModel">
		SELECT *
		FROM BOOKBOARD
		ORDER BY REGISDATE
	</select>

	<select id="selectBoardregister" resultType="BoardModel">
		SELECT *
		FROM
		BOOKBOARD
		ORDER BY REGISDATE
	</select>

	<select id="selectMaxGrade" resultType="int">
		SELECT MAX(grade)
		FROM
		BOOKMST
	</select>

	<select id="selectBoardtitle" resultType="BoardModel">
		SELECT *
		FROM
		BOOKBOARD
		ORDER BY title
	</select>

	<select id="selectBoardnum" parameterType="String" resultType="BoardModel">
		SELECT *
		FROM
		BOOKBOARD
		WHERE boardnum=#{boardnum}

	</select>
	<insert id="insertBoard" parameterType="BoardModel">
		INSERT INTO BOOKBOARD
		(title,content,REGISDATE,modifidate,id)
		VALUES
		(#{title},#{content},NOW(),NOW(),#{id})
	</insert>

	<delete id="deleteBoard" parameterType="String">
		DELETE FROM BOOKBOARD
		WHERE
		boardnum=#{boardnum}
	</delete>

	<update id="modifyBoard" parameterType="BoardModel">
		UPDATE BOOKBOARD
		SET
		content=#{content}, title=#{title}, modifidate=NOW()
		WHERE
		boardnum=#{boardnum}
	</update>

	<select id="noticeList" resultType="BoardModel">
		SELECT *
		FROM
		BOOKNOTICE
		ORDER BY
		REGISDATE desc
	</select>

	<insert id="insertNotice" parameterType="BoardModel">
		INSERT INTO BOOKNOTICE
		(content, REGISDATE)
		VALUES
		(#{content}, DATE_FORMAT(NOW(),
		"%Y-%m-%d"))
	</insert>
	<delete id="deleteNotice" parameterType="String">
		DELETE FROM BOOKNOTICE
		WHERE
		boardnum=#{boardnum}
	</delete>

	<update id="modifyNotice" parameterType="BoardModel">
		UPDATE BOOKNOTICE
		SET
		content=#{content}, REGISDATE=NOW()
		WHERE boardnum=#{boardnum}
	</update>







</mapper>